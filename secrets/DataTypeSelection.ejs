<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabs as Buttons</title>
    <link rel="stylesheet" href="/styles/DataTypeSelection.css">
</head>
<body>
    <div class="tab-container">
        <!-- Prescription Tab -->
        <form action="/prescription-form" method="POST" class="tab prescription-tab-form">
            <div class="tab prescription-tab" onclick="this.closest('form').submit()">
                <div class="overlay">
                    <h2>Prescription</h2>
                    <i class="fas fa-prescription-bottle-alt fa-4x"></i>
                </div>
            </div>
        </form>
        
        <!-- Test Analysis Tab -->
        <form action="/test-analysis-form" method="POST" class="tab test-analysis-tab-form">
            <div class="tab test-analysis-tab" onclick="this.closest('form').submit()">
                <div class="overlay">
                    <h2>Test Analysis</h2>
                    <i class="fas fa-file-medical-alt fa-4x"></i>
                </div>
            </div>
        </form>
    </div>

    <!-- FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>
